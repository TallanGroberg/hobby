<h1>Add a hobby</h1>

<%= form_with(model: @account, local: true) do |f| %>

<div class="field">
  <%= f.label :name %>
  <%= f.text_field :name, required: true, placeholder: "enter hobby here" %>
</div>
<br>
<br>

<div class="field">
  <%= f.label :comment %>
  <%= f.text_field :comment, required: true, placeholder: "tell us about it." %>
</div>
<%= f.submit 'submit hobby'%>
<% end %>
